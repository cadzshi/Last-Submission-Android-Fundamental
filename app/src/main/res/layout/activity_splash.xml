<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashActivity">

    <ImageView
        android:id="@+id/iv_github_logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/github"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327" />

    <TextView
        android:id="@+id/tv_github_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_github_logo"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/iv_github_logo"
        app:layout_constraintTop_toBottomOf="@+id/iv_github_logo" />

    <ImageView
        android:id="@+id/iv_bangkit"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/bangkit"
        app:layout_constraintEnd_toEndOf="@+id/iv_github_logo"
        app:layout_constraintStart_toStartOf="@+id/iv_github_logo"
        app:layout_constraintTop_toBottomOf="@+id/tv_github_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>